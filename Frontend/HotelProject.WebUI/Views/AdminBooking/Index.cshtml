@model List<ResultBookingDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

@{
    var count = 0;
}
<div class="card">
    <div class="card-body">
        <div class="card-title">
            <h4>Rezervasyonlar</h4>
        </div>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Misafir</th>
                        <th>Giriş Tarihi</th>
                        <th>Çıkış Tarihi</th>
                        <th>Durum</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <th>@count</th>
                            <td>@item.Name</td>
                            <td>@item.CheckIn</td>
                            <td>@item.CheckOut</td>
                            <td>
                                <span class="badge badge-primary px-2">@item.Status</span>
                            </td>
                            <td>
                                <a asp-action="ApprovedReservation" asp-controller="AdminBooking" asp-route-id="@item.BookingId" class="btn btn-primary">Onayla</a>
                                <a href="#" class="btn btn-danger">İptal Et</a>
                                <a href="#" class="btn btn-warning">Beklet</a>
                                <a href="#" class="btn btn-info">Güncelle</a>
                                <a href="#" class="btn btn-dark">Detaylar</a>
                            </td>
                        </tr>
                    }
            
