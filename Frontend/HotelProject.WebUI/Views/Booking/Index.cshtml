@using HotelProject.WebUI.Dtos.BookingDto
@model CreateBookingDto
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

@await Component.InvokeAsync("HeadPartial")
<body>
    <div class="container-xxl bg-white p-0">
        <!-- Spinner Start -->
        @await Component.InvokeAsync("SpinnerPartial")
        <!-- Spinner End -->
        <!-- Header Start -->
        @await Component.InvokeAsync("NavbarPartial")
    </div>

    <!-- Booking Start -->
    <!-- Booking End -->
    <!-- Booking Start -->
    <div class="container-xxl py-5" style="margin-bottom:100px;">
        <div class="container">
            <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                <h6 class="section-title text-center text-primary text-uppercase">Rzervasyon Yap</h6>
                <h1 class="mb-5">Otelmi <span class="text-primary text-uppercase">Rezervasyon Yap</span></h1>
            </div>
            <div class="row g-5">
                <div class="col-lg-6">
                    <div class="row g-3">
                        <div class="col-6 text-end">
                            <img class="img-fluid rounded w-75 wow zoomIn" data-wow-delay="0.1s" src="~/hoteltmp/img/about-1.jpg" style="margin-top: 25%;">
                        </div>
                        <div class="col-6 text-start">
                            <img class="img-fluid rounded w-100 wow zoomIn" data-wow-delay="0.3s" src="~/hoteltmp/img/about-2.jpg">
                        </div>
                        <div class="col-6 text-end">
                            <img class="img-fluid rounded w-50 wow zoomIn" data-wow-delay="0.5s" src="~/hoteltmp/img/about-3.jpg">
                        </div>
                        <div class="col-6 text-start">
                            <img class="img-fluid rounded w-75 wow zoomIn" data-wow-delay="0.7s" src="~/hoteltmp/img/about-4.jpg">
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="wow fadeInUp" data-wow-delay="0.2s">
                        <form method="post" asp-action="Index" asp-controller="Booking">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" asp-for="Name" placeholder="Adınız Soyadınız">
                                        <label for="name">Adınız</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input type="email" class="form-control" asp-for="Mail" placeholder="E-Mail">
                                        <label for="email">Mail Adresiniz</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating date" id="date3" data-target-input="nearest">
                                        <input type="text" class="form-control datetimepicker-input" asp-for="CheckIn" id="checkin" placeholder="Giriş Tarihi" data-target="#date3" data-toggle="datetimepicker" />
                                        <label for="checkin">Giriş Tarihi</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating date" id="date4" data-target-input="nearest">
                                        <input type="text" class="form-control datetimepicker-input" asp-for="CheckOut" id="checkout" placeholder="Çıkış Tarihi" data-target="#date4" data-toggle="datetimepicker" />
                                        <label for="checkout">Çıkış Tarihi</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <select class="form-select" asp-for="AdultCount" id="select1">
                                            <option value="1">1 Yetişkin</option>
                                            <option value="2">2 Yetişkin</option>
                                            <option value="3">3 Yetişkin</option>
                                        </select>
                                        <label for="select1">Yetişkin Seç</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <select class="form-select" asp-for="ChildCount" id="select2">
                                            <option value="1">1 Çocuk</option>
                                            <option value="2">2 Çocuk</option>
                                            <option value="3">3 Çocuk</option>
                                        </select>
                                        <label for="select2">Çocuk Seç</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating">
                                        <select class="form-select" asp-for="RoomCount" id="select3">
                                            <option value="1">Room 1</option>
                                            <option value="2">Room 2</option>
                                            <option value="3">Room 3</option>
                                        </select>
                                        <label for="select3">Oda Sayısı</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating">
                                        <textarea class="form-control" placeholder="Özel İstek" asp-for="SpecialRequest" style="height: 100px"></textarea>
                                        <label for="message">Özel İstek</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <button class="btn btn-primary w-100 py-3" type="submit">Rezervasyon Yap</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Booking End -->
    <!-- Footer Start -->
    @await Component.InvokeAsync("FooterPartial")
    <!-- Footer End -->
    <!-- JavaScript Libraries -->
    @await Component.InvokeAsync("ScriptsPartial")

    <!-- Template Javascript -->
    <script src="~/hoteltmp/js/main.js"></script>
</body>

</html>